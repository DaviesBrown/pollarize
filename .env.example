# Django Core Settings
DJANGO_SECRET_KEY=change-me-to-a-secure-secret-key
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,.pythonanywhere.com

# Database Configuration
# For PythonAnywhere Free Plan: Use SQLite (default)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# For PythonAnywhere Paid Plans: Use MySQL
# DB_ENGINE=django.db.backends.mysql
# DB_NAME=your_username$your_database_name
# DB_USER=your_username
# DB_PASSWORD=your_mysql_password
# DB_HOST=your_username.mysql.pythonanywhere-services.com
# DB_PORT=3306

# Caching / Redis (Optional - Not available on free plan)
# USE_REDIS=0
# REDIS_URL=redis://127.0.0.1:6379/1

# Celery Settings (For background tasks - Not available on free plan)
CELERY_ALWAYS_EAGER=1  # Run tasks synchronously on free plan
# CELERY_BROKER_URL=redis://127.0.0.1:6379/0
# CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# Payment Integration - Paystack
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key_here
PAYSTACK_SECRET_KEY=sk_test_your_secret_key_here

# Email Settings (Optional - for notifications)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=1
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Security Settings for Production
SECURE_BROWSER_XSS_FILTER=1
SECURE_CONTENT_TYPE_NOSNIFF=1
X_FRAME_OPTIONS=DENY
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=1
SECURE_HSTS_PRELOAD=1

# Analytics and Compliance
ENABLE_ANALYTICS=1
ENABLE_COMPLIANCE_LOGGING=1

# Static Files (for production)
STATIC_ROOT=/home/yourusername/pollarize/static
